pico-8 cartridge // http://www.pico-8.com
version 16
__lua__

--
-- constants
--

player = {  x = 64,
            y = 64,
        }

--
-- standard pico-8 workflow
--

function _init()
   
end

function _update()
   update_player()
end

function _draw()
    draw_world()
    draw_player()
end

--
-- cool functions
--

function crnd(min, max)
    return min + rnd(max-min)
end

--
-- play mode
--

function update_player()
    if btn(0) and player.x > 4 then
        player.x -= 2
    end
    if btn(1) and player.x < 124 then
        player.x += 2
    end
    if btn(2) and player.y > 4 then
        player.y -= 2
    end
    if btn(3) and player.y < 124 then
        player.y += 2
    end
end

--
-- drawing
--

function draw_world()
    cls(6)
end

function draw_player()
    spr(1, player.x - 4, player.y - 4)
end

